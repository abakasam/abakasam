sudo su -c "yum groupinstall 'X Window System'"

/etc/ssh/sshd_config
	X11Forwarding yes
	
	service sshd restart

	yum install --downloadonly --downloaddir="." xorg-x11-xauth
	yum install *.rpm

	xauth add $(xauth -f !test/.Xauthority list|tail -1)
	
	mv .Xauthority old.Xauthority

touch ~/.Xauthority
	HOST=https://port-0-drifty-abakasam720639.codeanyapp.com/
	export HOST
	xauth generate :0 . trusted
	xauth add $HOST:0 . $(xxd -l 16 -p /dev/urandom)
	export DISPLAY=$HOST:0.0
	xauth add
